---
import BaseLayout from "../layouts/base.astro";
---

<BaseLayout>
  <div
    class="flex justify-between max-w-lg md:max-w-2xl lg:max-w-6xl mx-auto mt-28 pb-12 relative"
  >
    <div class="animate-fadeIn">
      <h2
        class="text-6xl font-bold text-white leading-tight tracking-tight max-w-2xl mb-2"
      >
        Start your digital transformation today
      </h2>
      <p class="text-white opacity-75 text-lg">
        Generative AI has revolutionized the way we think about work.
      </p>
    </div>

    <img
      src="/unicorn-cat.png"
      class="rounded-lg drop-shadow max-h-96 absolute top-2 right-0"
      height="384px"
      width="384px"
    />
  </div>
  <main class=""></main>
</BaseLayout>
